        }

        footer {
          position: relative;
          top: 300px;
        }
      }

      h1 {
        font-family: "Quicksand", sans-serif;
        font-optical-sizing: auto;
        font-weight: 700;
        text-align: center;
        padding: 40px;
      }

      .post-container {
        max-width: 982px;
        margin: 0 auto;
        padding: 0 10px;
        font-family: poppins-semibold, poppins, sans-serif;
      }
